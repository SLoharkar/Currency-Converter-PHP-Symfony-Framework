<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <!-- Bootstrap 4 CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
{% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}


<body>
    <div class="container my-4">
        <h2 class="text-center mb-4">User Management</h2>
        
        <!-- Table displaying user data -->
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Roles</th>
                    <th colspan="2" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Iterate over users passed from the controller -->
                {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{user.plainPassword}}</td> 
                    <td>{{ user.roles|join(', ') }}</td>
                    <td class="text-center"><a href="{{ path('admin_user_update', {'id': user.id}) }}" class="btn btn-primary">Update</a></td>
                    <td class="text-center"><a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
            <div class="text-center mt-3">
                <a href="{{ path('logout') }}" class="btn btn-secondary">Logout</a>
            </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>